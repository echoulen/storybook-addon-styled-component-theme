{
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "dist",
    "module": "es2015",
    "target": "es5",
    "sourceMap": true,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "declaration": true,
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "jsx": "react",
    "types": [
      "node",
      "jest"
    ],
    "sourceRoot": "src",
    "declarationDir": "dist",
  },
  "exclude": [
    "node_modules",
    "example"
  ]
}
